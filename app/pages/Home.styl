.home-layout
  display flex
  flex-direction column
  padding-top 48px

  section
    display flex
    justify-content center
    align-content center
    width 100%
    font-size 20px

  .name
    flex-direction column
    height 400px
    background-color $color
    color white
    text-align center

    label
      font-size 70px

    .moto
      font-size 30px

  .features
    padding 100px 0 100px 0

    div
      width 500px

      h1
        padding-left 38px

  .warning
    padding 20px 0 20px 0
    color red
